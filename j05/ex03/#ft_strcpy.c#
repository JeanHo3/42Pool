int		ft_strlen(char *str)
{
	int i;

	i = 0;
	while (str[i] != '\0')
		i++;
	return (i);
}

char	*ft_strcpy(char *dest, char *src)
{
	int idx;
	int len;

	idx = 0;
	len = ft_strlen(src);
	if (len <= ft_strlen(dest))
		while (src[idx] != '\0')
		{
			dest[idx] = src[idx];
			idx++;
		}

	return (dest);
}
