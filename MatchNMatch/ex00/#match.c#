int		match(char *s1, char *s2)
{
	int i;

	i = 0;
	if (*s1 != '\0' && *s2 == '*')
	{
		i += (match(s1 + 1, s2) + match(s1, s2 + 1));
		if (i > 0)
			return (1);
	}
	if (*s1 == '\0' && *s2 == '*')
		return (match(s1, s2 + 1));
	if (*s1 == *s2 && *s1 != '\0' && *s2 != '\0')
		return (match(s1 + 1, s2 + 1));
	if (*s1 == *s2 && *s1 == '\0' && *s2 == '\0')
		return (1);
	return (0);
}
